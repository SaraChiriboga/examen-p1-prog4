@{
    ViewBag.Title = "Centro Pokémon";
}

<main style="background-color:#F7F7F9; min-height:100vh; padding:40px 0;">

    <section class="text-center mb-5" aria-labelledby="pokemonTitle">
        <h1 id="pokemonTitle">¡Bienvenido Entrenador Pokémon! ⚡</h1>
        <p class="lead">Prepárate para vivir una aventura épica en el mundo Pokémon.</p>
    </section>

    <div class="container">
        <div class="row justify-content-center text-center">

            <section class="col-md-4 mb-4" aria-labelledby="starterTitle">
                <h2 id="starterTitle">¡Ingresa Pokemones!</h2>
                <img src="https://cdn.dribbble.com/userupload/21193457/file/original-8c00e9c322223c8930eff042dc435445.gif"
                     alt="pokemon"
                     style="max-width:300px;" />
                <p>Conoce a todos los pokemones!</p>
                <p></p>
                <p>
                    <a class="btn btn-outline-danger" href="https://localhost:44348/Pokemones/Index">
                        ¡Nuevo Pokémon! &raquo;
                    </a>
                </p>
            </section>

            <section class="col-md-4 mb-4" aria-labelledby="battleTitle">
                <h2 id="battleTitle">¡Conoce a más entrenadores!</h2>
                <img src="https://i.pinimg.com/originals/43/3a/51/433a51a84e8bd0f81360f558c3a2c700.gif"
                     alt="pokemon"
                     style="max-width:300px;" />
                <p>Enfréntate a otros entrenadores y supera los desafíos.</p>
                <p>
                    <a class="btn btn-outline-warning" href="https://localhost:44348/Entrenadores/Index">
                        ¡Entrenadores! &raquo;
                    </a>
                </p>
            </section>

        </div>
    </div>
</main>
