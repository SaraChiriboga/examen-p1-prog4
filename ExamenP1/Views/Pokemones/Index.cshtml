@model IEnumerable<ExamenP1.Models.Pokemon>

@{
    ViewBag.Title = "Registro de Pokemones";
}

<h2>Lista de Pokemones</h2>

<p>
    @Html.ActionLink(" Crear Nuevo Pokémon", "Create", null, new { @class = "btn btn-success mb-3" })
</p>

<table class="table table-striped table-hover text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.NivelPoder)</th>
            <th>@Html.DisplayNameFor(model => model.Habilidad)</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var pokemon in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => pokemon.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => pokemon.Tipo)</td>
                <td>@Html.DisplayFor(modelItem => pokemon.NivelPoder)</td>
                <td>@Html.DisplayFor(modelItem => pokemon.Habilidad)</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Detalles", "Details", new { id = pokemon.Id }, new { @class = "btn btn-info btn-sm text-white" })
                        @Html.ActionLink("Editar", "Edit", new { id = pokemon.Id }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = pokemon.Id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
